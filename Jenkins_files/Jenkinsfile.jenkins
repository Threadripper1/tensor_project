pipeline {
    agent {
        dockerfile true
    }
    stages {
        stage('Test') {
            steps {
                sh """
                    echo "Testing...."
                    pytest -q tests.py
                """
            }
        }
    }
    post {
        failure('Tests Failed'){
            echo "Tests Failed"
        }
        success('Tests Successed') {
            echo "Tests Successed"
        }
    }
}